{% extends app.request.isXmlHttpRequest() ? "ajax.html.twig" : "socio/query_base.html.twig"%}

{% set page = 'list' %}
{% set title = 'Listado de Socios' %}
{% block ajax_content %}
  <div class="col-sm-10 col-sm-offset-1">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>ESNcard</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>E-Mail</th>
            <th>Alta</th>
          </tr>
        </thead>
        <tbody>
          {% for socio in socios %}
            <tr>
              <td><strong><a href="{{ url('socio.read', { socio : socio.id }) }}">{{socio.id}}</a></strong></td>
              <td>{{socio.esncard}}</td>
              <td>{{socio.nombre}}</td>
              <td>{{socio.apellido}}</td>
              <td>{{socio.dni}}</td>
              <td>{{socio.email}}</td>
              <td>{{socio.alta}}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 text-center">
      {{pagination(pagination,'socio.list')}}
    </div>
  </div>
{% endblock %}