<database name="libro" defaultIdMethod="native"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://xsd.propelorm.org/1.6/database.xsd"
          namespace="EsnUab\Libro\Model"
        >
    <table name="socio" phpName="Socio">
        <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="esncard" type="varchar" size="15" required="true"/>
        <column name="nombre" type="varchar" size="255" required="true"/>
        <column name="apellido" type="varchar" size="255" required="true"/>
        <column name="email" type="varchar" size="255" required="true"/>
        <column name="dni" type="varchar" size="30" required="true"/>
        <column name="pais" type="varchar" size="2" required="true"/>
        <column name="idioma" type="enum" valueSet="espaÃ±ol,english" required="true"/>
        <column name="alta" type="varchar" size="10" required="true"/>
        <column name="baja" type="varchar" size="10" required="false"/>
        <column name="activo" type="boolean" defaultValue="1" required="true"/>
        <column name="removed" type="boolean" defaultValue="0" required="true"/> 
        <unique>
            <unique-column name="esncard"/>
            <unique-column name="email"/>
        </unique>
        <behavior name="versionable">
            <parameter name="log_created_at" value="true" />
            <parameter name="log_created_by" value="true" />
            <parameter name="log_comment" value="true" />
        </behavior>
        <behavior name="timestampable"/>
        <behavior name="validate">
            <parameter name="rule0_0" value="{column: nombre, validator: NotNull}" />
            <parameter name="rule0_1" value="{column: nombre, validator: Length, options: {max:  255, min: 2}}" />
            <parameter name="rule1_0" value="{column: apellido, validator: NotNull}" />
            <parameter name="rule1_1" value="{column: apellido, validator: Length, options: {max:  255, min: 2}}" />
            <parameter name="rule2_0" value="{column: email, validator: NotNull}" />
            <parameter name="rule2_1" value="{column: email, validator: Email}" />
            <parameter name="rule3_0" value="{column: esncard, validator: NotNull}" />
            <parameter name="rule3_1" value="{column: esncard, validator: Length, options: {min:  10, max: 15}}" />
        </behavior>
        <behavior name="delegate">
            <parameter name="to" value="socio_account"/>
        </behavior>
    </table>
    <table name="socio_account" phpName="SocioAccount" namespace="\\EsnUab\Libro\Security\Core\User">
        <column name="salt" type="varchar" required="false"/>
        <column name="password" type="varchar" required="false"/>
        <column name="last_login" type="timestamp" required="false"/>
    </table>
</database>
